function [Exa, Eya, Hxa, Hya] = horn_to_aperture(a, b, d, A, B, k, num)    
    
    %assuming that the horn antenna has a 
    %uniform E field in the y direction
    
    n0 = 120 * pi();    
    Exa = zeros(num, num);
    Eya = zeros(num, num);
    Hxa = zeros(num, num);
    Hya = zeros(num, num);
    
    for i = 1:1:num
        for j = 1:1:num
            x = A * i/num - A/2;
            y = B * j/num - B/2;
            
            r = sqrt(d*d + y*y);
            R = sqrt(r*r + x*x);
            
            cos_theta = x / R;
            sin_theta = r / R;
            cos_phi = y / r;
            sin_phi = d / r;
            
            theta = asin(sin_theta);
            if x== 0
                phi = 0;
            else
                phi = atan(y / x);
            end
            
            coeff = 1i * a * b * k * exp(-1i * k * R) / (2 * pi() * R);
            
            X = k * a / 2 * sin_theta * cos_phi;
            Y = k * b / 2 * sin_theta * sin_phi;
            
            E_theta = coeff * sin_phi * sinc(X) * sinc(Y);
            E_phi = coeff * cos_theta * cos_phi * sinc(X) * sinc(Y);
            H_theta = - E_phi / n0;
            H_phi = E_theta / n0;
            
            Exa(i, j) = - E_theta * sin_theta;
            Eya(i, j) = E_theta * cos_theta * cos_phi - E_phi * sin_phi;
            Hxa(i, j) = - H_theta * sin_theta;
            Hya(i, j) = H_the
        end
    end
    
end